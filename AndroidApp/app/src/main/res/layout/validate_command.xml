<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/custom_border2"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:text="Etes-vous sûr d'envoyer votre commande ?
Pensez à l'envoyer en même temps que les gens de votre table."
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/cancelCommand"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Annuler"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/sendCommandButton"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Envoyer"/>
    </LinearLayout>


</LinearLayout>